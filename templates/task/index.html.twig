{% extends 'base.html.twig' %}

{% block title %}todas las tareas{% endblock %}

{% block body %}


<div class="main">
    <h2>todas las tareas</h2>
    <table>
        <tr>
            <th>Tareas</th>
            <th>Prioridad</th>
            <th>Horas presupuestadas</th>
            <th>Acciones</th>
        </tr>
         
        {% for task in tasks %}
        <tr>
           <td> {{ task.tittle }} </td>
           <td> {{ task.priority }} </td>
           <td> {{ task.hours }} </td>
           <td><a href="{{ path('task_detail',{'id':task.id})}}" ><span class="icon-eye"></span></a><a href="" ><span class="icon-pencil"></span></a><a href="" ><span class="icon-bin2"></span></a> </td>
        </tr>
        {% endfor %}
       
    </table>
</div>
{% endblock %}
