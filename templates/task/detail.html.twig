{% extends 'base.html.twig' %}

{% block title %}todas las tareas{% endblock %}

{% block body %}


<div class="main">

    <h2>{{ task.tittle }}</h2>

    <p class="data-task">
    {{ 'Creado por: ' ~ task.user.name ~'  '~ task.user.surname ~ ' - ' ~ task.createdAt|date('d/m/Y h:i' ) ~' Prioridad: '~ task.priority ~ '  Horas: ' ~ task.hours }}
    </p>

    <p>{{ task.content }}</p>
   
</div>
{% endblock %}
